<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.dictionaryfw.entity.Locale">

    <resultMap id="Locale" type="Locale">
        <constructor>
            <idArg column="id" javaType="Long"/>
            <arg column="locale" javaType="String"/>
            <arg column="system" javaType="_boolean" jdbcType="TINYINT"/>
        </constructor>
    </resultMap>

    <select id="loadAllLocales" resultMap="org.complitex.dictionaryfw.entity.Locale.Locale">
        SELECT l.* FROM `locales` l
    </select>
</mapper>
