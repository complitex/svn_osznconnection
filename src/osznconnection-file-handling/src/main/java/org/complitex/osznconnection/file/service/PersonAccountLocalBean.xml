<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.osznconnection.file.service.PersonAccountLocalBean">

    <select id="findAccountNumber" parameterType="org.complitex.osznconnection.file.entity.PersonAccount" resultType="string">
        SELECT pa.`account_number`
        FROM `person_account` pa
        WHERE
        <include refid="org.complitex.osznconnection.file.service.PersonAccountLocalBean.filter"/>
        LIMIT 0,1
    </select>

    <sql id="filter">
         pa.`city` = #{city}
         AND pa.`street` = #{street}
         AND pa.`building_num` = #{buildingNumber}
         AND pa.`building_corp` = #{buildingCorp}
         AND pa.`apartment` = #{apartment}
         AND pa.`first_name` = #{firstName} AND pa.`middle_name` = #{middleName}
         AND pa.`last_name` = #{lastName} AND pa.`own_num_sr` = #{ownNumSr}
    </sql>

    <insert id="insert" parameterType="org.complitex.osznconnection.file.entity.PersonAccount">
        INSERT INTO `person_account` (`city`, `street`, `building_num`, `building_corp`, `apartment`,
                `account_number`, `first_name`, `middle_name`, `last_name`, `own_num_sr`)
        VALUES (#{city}, #{street}, #{buildingNumber}, #{buildingCorp}, #{apartment},
                #{accountNumber}, #{firstName}, #{middleName}, #{lastName}, #{ownNumSr})
    </insert>

     <update id="update" parameterType="org.complitex.osznconnection.file.entity.PersonAccount">
        UPDATE `person_account` SET `city` = #{city}, `street` = #{street}, `building_num` = #{buildingNumber},
                `building_corp` = #{buildingCorp}, `apartment` = #{apartment}, `account_number` = #{accountNumber},
                `first_name` = #{firstName}, `middle_name` = #{middleName}, `last_name` = #{lastName}, `own_num_sr` = #{ownNumSr}
                WHERE `id` = #{id}
    </update>

    <select id="find">
        SELECT pa.`account_number`
        FROM `person_account` pa
        WHERE
        <include refid="org.complitex.osznconnection.file.service.PersonAccountLocalBean.filter"/>
        LIMIT #{start},#{size}
    </select>

</mapper>