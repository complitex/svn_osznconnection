<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.osznconnection.file.service.PersonAccountLocalBean">

    <select id="findAccountNumber" parameterType="org.complitex.osznconnection.file.entity.PersonAccount" resultType="string">
        SELECT pa.`account_number`
        FROM `person_account` pa
        WHERE
        <include refid="org.complitex.osznconnection.file.service.PersonAccountLocalBean.filter"/>
        LIMIT 0,1
    </select>

    <sql id="filter">
         pa.`city` = #{city}
         AND pa.`street` = #{street}
         AND pa.`building_num` = #{buildingNumber}
         AND pa.`building_corp` = #{buildingCorp}
         AND pa.`apartment` = #{apartment}
         AND pa.`first_name` = #{firstName} AND pa.`middle_name` = #{middleName}
         AND pa.`last_name` = #{lastName} AND pa.`own_num_sr` = #{ownNumSr}
    </sql>

    <sql id="webFilter">
        <where>
            <if test="city != null">
                pa.`city` LIKE CONCAT('%', #{city}, '%')
            </if>
            <if test="street != null">
                pa.`street` LIKE CONCAT('%', #{street}, '%')
            </if>
            <if test="buildingNumber != null">
                pa.`building_num` LIKE CONCAT('%', #{buildingNumber}, '%')
            </if>
            <if test="buildingCorp != null">
                pa.`building_corp` LIKE CONCAT('%', #{buildingCorp}, '%')
            </if>
            <if test="apartment != null">
                pa.`apartment` LIKE CONCAT('%', #{apartment}, '%')
            </if>
            <if test="firstName != null">
                pa.`first_name` LIKE CONCAT('%', #{firstName}, '%')
            </if>
            <if test="middleName != null">
                pa.`middle_name` LIKE CONCAT('%', #{middleName}, '%')
            </if>
            <if test="lastName != null">
                pa.`last_name` LIKE CONCAT('%', #{lastName}, '%')
            </if>
            <if test="accountNumber != null">
                pa.`account_number` LIKE CONCAT('%', #{accountNumber}, '%')
            </if>
            <if test="ownNumSr != null">
                pa.`own_num_sr` LIKE CONCAT('%', #{ownNumSr}, '%')
            </if>
        </where>
    </sql>

    <insert id="insert" parameterType="org.complitex.osznconnection.file.entity.PersonAccount">
        INSERT INTO `person_account` (`city`, `street`, `building_num`, `building_corp`, `apartment`,
                `account_number`, `first_name`, `middle_name`, `last_name`, `own_num_sr`)
        VALUES (#{city}, #{street}, #{buildingNumber}, #{buildingCorp}, #{apartment},
                #{accountNumber}, #{firstName}, #{middleName}, #{lastName}, #{ownNumSr})
    </insert>

     <update id="update" parameterType="org.complitex.osznconnection.file.entity.PersonAccount">
        UPDATE `person_account` SET `city` = #{city}, `street` = #{street}, `building_num` = #{buildingNumber},
                `building_corp` = #{buildingCorp}, `apartment` = #{apartment}, `account_number` = #{accountNumber},
                `first_name` = #{firstName}, `middle_name` = #{middleName}, `last_name` = #{lastName}, `own_num_sr` = #{ownNumSr}
                WHERE `id` = #{id}
    </update>

    <select id="find" parameterType="org.complitex.osznconnection.file.entity.example.PersonAccountExample"
                resultType="org.complitex.osznconnection.file.entity.PersonAccount">
        SELECT pa.`id`, pa.`city`, pa.`street`, pa.`building_num` buildingNumber, pa.`building_corp` buildingCorp, pa.`apartment`,
                pa.`first_name` firstName, pa.`middle_name` middleName, pa.`last_name` lastName, pa.`own_num_sr` ownNumSr,
                pa.`account_number` accountNumber
        FROM `person_account` pa
        <include refid="org.complitex.osznconnection.file.service.PersonAccountLocalBean.webFilter"/>
        <if test="orderByClause != null">
            ORDER BY ${orderByClause}
            <choose>
                <when test="asc">
                    ASC
                </when>
                <otherwise>
                    DESC
                </otherwise>
            </choose>
        </if>
        LIMIT #{start},#{size}
    </select>

    <select id="count" resultType="int" parameterType="org.complitex.osznconnection.file.entity.example.PersonAccountExample">
        SELECT COUNT(*) FROM `person_account` pa
        <include refid="org.complitex.osznconnection.file.service.PersonAccountLocalBean.webFilter"/>
    </select>

</mapper>