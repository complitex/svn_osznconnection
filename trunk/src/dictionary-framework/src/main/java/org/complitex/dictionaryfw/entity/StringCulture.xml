<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.dictionaryfw.entity.StringCulture">

    <resultMap id="StringCulture" type="StringCulture">
        <constructor>
            <idArg column="locale_id" javaType="Long"/>
            <arg column="value" javaType="String"/>
        </constructor>
        <id column="id" property="id"/>
    </resultMap>

    <insert id="insert" parameterType="Parameter">
        insert into `${table}_string_culture`(`id`, `locale_id`, `value`) values (#{object.id}, #{object.localeId}, UPPER(#{object.value}))
    </insert>

    <select id="find" parameterType="hashmap" resultMap="org.complitex.dictionaryfw.entity.StringCulture.StringCulture">
        SELECT sc.* FROM `${table}_string_culture` sc WHERE sc.`id` = #{id}
    </select>

    <insert id="insertDescriptionData" parameterType="StringCulture">
        insert into `string_culture`(`id`, `locale_id`, `value`) values (#{id}, #{localeId}, UPPER(#{value}))
    </insert>

</mapper>
