<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.osznconnection.file.service.PersonAccountLocalBean">

    <select id="find" parameterType="org.complitex.osznconnection.file.entity.PersonAccount" resultType="string">
        SELECT pa.`account_number`
        FROM `person_account` pa
        WHERE
        <include refid="org.complitex.osznconnection.file.service.PersonAccountLocalBean.filter"/>
        LIMIT 0,1
    </select>

    <sql id="filter">
         pa.`city_id` = #{cityId} AND pa.`street_id` = #{streetId} AND pa.`building_id` = #{buildingId} AND pa.`apartment_id` = #{apartmentId} AND
         pa.`first_name` = #{firstName} AND pa.`middle_name` = #{middleName} AND pa.`last_name` = #{lastName} AND pa.`own_num_sr` = #{ownNumSr}
    </sql>

    <!--<select id="count" parameterType="org.complitex.osznconnection.file.entity.PersonAccount" resultType="long">
        SELECT COUNT(*)
        FROM `person_account` pa
        WHERE
         <include refid=""/>
    </select>-->

    <insert id="insert" parameterType="org.complitex.osznconnection.file.entity.PersonAccount">
        INSERT INTO `person_account` (`city_id`, `street_id`, `building_id`, `apartment_id`, `account_number`, `first_name`, `middle_name`, `last_name`,
        `own_num_sr`)
        VALUES (#{cityId}, #{streetId}, #{buildingId}, #{apartmentId}, #{accountNumber}, #{firstName}, #{middleName}, #{lastName}, #{ownNumSr})
    </insert>

</mapper>